<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MIRIApp"
             x:Class="MIRIApp.MainPage">

    <Grid>

        <Button x:Name="btn1" Grid.ColumnSpan="2" BackgroundColor="#4d50a1"  Opacity="0.5"/>
        <Button x:Name="btn3" Text="QR" Grid.Row="1" Clicked="OnClick" BackgroundColor="#4d50a1"  Opacity="0.5"/>
        <Button x:Name="btn4" Text="sub 3" Grid.Column="1" Grid.Row="1" Clicked="OnClick" BackgroundColor="#4d50a1"  Opacity="0.5"/>
        <Button x:name="btn5" Text="sub 4" Grid.Row="2" BackgroundColor="#4d50a1"  Opacity="0.5"/>
        <Button x:name="btn6" Text="Settings" Grid.Column="1" Grid.Row="2" Clicked="OnClick" BackgroundColor="#4d50a1"  Opacity="0.5"/>

        <!--Overlay for grid-->
        <Grid>
            <Button x:Name="overlay1" Grid.ColumnSpan="2" Grid.Row="0" BackgroundColor="Transparent" Image="@drawable/icon_button"/>
        </Grid>

    </Grid>
    
</ContentPage>
