                <Label HorizontalTextAlignment="Center" Text="Design created by Fraser Rae" TextColor="AntiqueWhite" Grid.ColumnSpan="2" Grid.Row="5" />
                <Label HorizontalTextAlignment="Center" Text="Project Manager John Morrison" TextColor="AntiqueWhite" Grid.ColumnSpan="2" Grid.Row="6" />
                <Label HorizontalTextAlignment="Center" Text="Version 1.0" TextColor="AntiqueWhite" Grid.ColumnSpan="2" Grid.Row="7" />
            </Grid>
        </StackLayout>
        
    </ContentPage.Content>
