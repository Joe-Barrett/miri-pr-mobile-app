<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MIRIApp.View.ItemPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding itemName}" TextColor="White"/>
            <Label Text="{Binding collabName}" TextColor="White"/>
            <Label Text="{Binding city}" TextColor="White"/>
            <Label Text="{Binding country}" TextColor="White"/>
            <Label Text="{Binding description}" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>